<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrincipalFondo"
    android:foregroundTint="@color/colorPrincipalFondo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TuActividad">

        <!-- BARRA SUPERIOR -->

        <!-- LOGO -->


        <ImageView
            android:id="@+id/logo"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginStart="172dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="173dp"
            android:src="@drawable/logopng"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <!-- CONTENIDO-->

        <ImageView
            android:id="@+id/img_nuevo_relato"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:srcCompat="@drawable/img_nuevo_relato"
            android:layout_marginTop="40dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <TextView
            android:id="@+id/tvIniciarRelato"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/boton_redondeado_blanco"
            android:fontFamily="@font/rajdhani"
            android:text="INICIAR RELATO"
            android:textAlignment="center"
            android:textColor="@color/colorPrincipalFondo"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_nuevo_relato"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/btnContinuarRelato"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boton_redondeado_blanco"
            android:fontFamily="@font/rajdhani"
            android:text="CONTINUAR RELATO"
            android:textAlignment="center"
            android:textColor="@color/colorPrincipalFondo"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView10"
            tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck" />


        <!-- BARRA INFERIOR -->

        <TextView
            android:id="@+id/btnLeerRelatos"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/boton_redondeado_blanco"
            android:fontFamily="@font/rajdhani"
            android:text="LEER RELATOS"
            android:textAlignment="center"
            android:textColor="@color/colorPrincipalFondo"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorSecundarioClaro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/btnBAck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/toolbar2"
            app:srcCompat="@drawable/back"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIniciarRelato"
            app:srcCompat="@drawable/img_continuar_relat" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnContinuarRelato"
            app:srcCompat="@drawable/boock" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
